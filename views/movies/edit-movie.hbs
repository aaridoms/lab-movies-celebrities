<div>
    <h2>Modifica la pelicula</h2>

    <form action="/movies/{{oneMovie._id}}/edit" method="post">
        <label for="title">Titulo</label>
        <input type="text" name="title" value="{{oneMovie.title}}">

        <label for="genre">Genero</label>
        <input type="text" name="genre" value="{{oneMovie.genre}}">

        <label for="plot">Trama</label>
        <input type="text" name="plot" value="{{oneMovie.plot}}">
   
        <select name="cast">
            {{#each oneCelebrity}}

                <option value="{{this._id}}" selected>{{this.name}}</option>

            {{/each}}
        </select>
        <button>Modificar</button>
    </form>
</div>